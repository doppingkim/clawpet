{
  "name": "clawgotchi",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:web dev:server",
    "dev:web": "npm --workspace @clawgotchi/web run dev",
    "dev:server": "npm --workspace @clawgotchi/server run dev",
    "open": "node ./bin/clawgotchi.mjs",
    "setup-cron": "bash ./scripts/setup-cron.sh",
    "remove-cron": "bash ./scripts/remove-cron.sh",
    "postinstall": "bash ./scripts/setup-cron.sh 2>/dev/null || true"
  },
  "bin": {
    "clawgotchi": "./bin/clawgotchi.mjs"
  },
  "devDependencies": {
    "jpeg-js": "^0.4.4",
    "npm-run-all": "^4.1.5",
    "pngjs": "^7.0.0"
  }
}