{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri/dev/crates/tauri-utils/schema.json",
  "productName": "ClawGotchi",
  "version": "0.1.0",
  "identifier": "com.clawgotchi.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ClawGotchi",
        "width": 300,
        "height": 350,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "dragDropEnabled": false,
        "skipTaskbar": true,
        "visible": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://ipc.localhost ws://127.0.0.1:* ws://localhost:* ws://* wss://*; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ]
  }
}
